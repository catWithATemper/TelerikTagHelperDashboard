@model TelerikTagHelperDashboard.Models.OrderSearchCriteria

<div class="hidden-xs" style="float:left;">
    <div>
        <h3>Report Range</h3>
        <p>
            <label asp-for="StatsFrom">Stats From</label>
        </p>
        <p>
            <!-- Stats From Date Picker -->
            @* <input type="datetime-local" value="01/01/1996" /> *@
            <kendo-datepicker for="StatsFrom" value="new DateTime(1996, 1, 1)" />
        </p>
        <p>
            <label asp-for="StatsTo">Stats To</label>
        </p>
        <p>
            <!-- Stats To Date Picker -->
            @*<input type="datetime-local" value="01/01/1998" />*@
            <kendo-datepicker for="StatsTo" value="new DateTime(1998, 1, 1)" />
        </p>
        <nav id="employee-list">
            <h3>Team members</h3>
            <!-- Employee List View -->
            <kendo-treeview name="EmployeesList" datatextfield="FullName">
                <hierarchical-datasource>
                    <transport>
                        <read url="@Url.Action("Employees_Read", "Employees")" typeof="GET" />
                    </transport>
                    <schema>
                        <hierarchical-model id="EmployeeId" has-children="HasChildren" />
                    </schema>
                </hierarchical-datasource>
            </kendo-treeview>
        </nav>
    </div>
</div>